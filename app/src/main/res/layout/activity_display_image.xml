<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/cambiar_altura"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="gone"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                tools:ignore="VisualLintBounds">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/f1"
                        tools:ignore="ContentDescription" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/f2"
                        tools:ignore="ContentDescription,ImageContrastCheck" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/f3"
                        tools:ignore="ContentDescription,ImageContrastCheck" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/f4"
                        tools:ignore="ContentDescription" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/detailed_card_view"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:backgroundTint="#0e242f"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:gravity="right|center"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <ImageButton
                    android:id="@+id/arrow_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/arrow"
                    android:rotation="180"
                    android:importantForAccessibility="no"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">
                </ImageButton>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </Space>





                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_glass"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:backgroundTint="#fbff44"
                    app:icon="@drawable/glass"
                    app:iconSize="24dp"
                    app:cornerRadius="75dp"
                    android:textColor="@color/black"
                    app:strokeColor="@color/white"
                    android:text="FIltros"
                    app:iconTint="@color/black"
                    app:strokeWidth="5dp"
                    tools:ignore="HardcodedText,SpeakableTextPresentCheck" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </Space>

                <ImageButton
                    android:id="@+id/download_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/download"
                    android:importantForAccessibility="no"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </Space>

                <ImageButton
                    android:id="@+id/share_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/share_24dp_fill0_wght400_grad0_opsz24"
                    android:importantForAccessibility="no"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">
                </ImageButton>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>